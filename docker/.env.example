# Agenda Bella - Development Environment Variables
# Copy this file to .env and customize as needed

# Database Configuration
POSTGRES_DB=agenda_bella_dev
POSTGRES_USER=agenda_bella
POSTGRES_PASSWORD=agenda_bella_dev_password
DATABASE_URL=postgresql://agenda_bella:agenda_bella_dev_password@localhost:5432/agenda_bella_dev

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_SESSION_DB=1
REDIS_CACHE_DB=2

# RabbitMQ Configuration
RABBITMQ_DEFAULT_USER=agenda_bella
RABBITMQ_DEFAULT_PASS=agenda_bella_dev_password
RABBITMQ_DEFAULT_VHOST=/agenda_bella
AMQP_URL=amqp://agenda_bella:agenda_bella_dev_password@localhost:5672/agenda_bella

# Application Configuration
NODE_ENV=development
PORT=3000
APP_URL=http://localhost:3000

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
SESSION_SECRET=your-super-secret-session-key-change-in-production
BCRYPT_ROUNDS=12

# External Services (Development)
# Email Service
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=noreply@agendabella.localhost

# SMS Service (Mock in development)
SMS_PROVIDER=mock
SMS_API_KEY=mock-key

# Payment Gateway (Sandbox)
PAYMENT_PROVIDER=stripe
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# File Storage
STORAGE_PROVIDER=local
STORAGE_PATH=./uploads
MAX_FILE_SIZE=10MB

# Monitoring and Logging
LOG_LEVEL=debug
ENABLE_REQUEST_LOGGING=true
SENTRY_DSN=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Development Tools
ENABLE_SWAGGER=true
ENABLE_PLAYGROUND=true