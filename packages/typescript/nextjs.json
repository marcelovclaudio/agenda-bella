{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@agenda-bella/api": ["../../packages/api/src"],
      "@agenda-bella/api/*": ["../../packages/api/src/*"],
      "@agenda-bella/audit": ["../../packages/audit/src"],
      "@agenda-bella/audit/*": ["../../packages/audit/src/*"],
      "@agenda-bella/database": ["../../packages/database/src"],
      "@agenda-bella/database/*": ["../../packages/database/src/*"],
      "@agenda-bella/security": ["../../packages/security/src"],
      "@agenda-bella/security/*": ["../../packages/security/src/*"],
      "@agenda-bella/shared": ["../../packages/shared/src"],
      "@agenda-bella/shared/*": ["../../packages/shared/src/*"],
      "@agenda-bella/ui": ["../../packages/ui/src"],
      "@agenda-bella/ui/*": ["../../packages/ui/src/*"],
      "@agenda-bella/typescript": ["../../packages/typescript"],
      "@agenda-bella/typescript/*": ["../../packages/typescript/*"],
      "@/*": ["./src/*"],
      "~/*": ["./src/*"],
      "@/components/*": ["./src/components/*"],
      "@/app/*": ["./src/app/*"],
      "@/pages/*": ["./src/pages/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/utils/*": ["./src/utils/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/styles/*": ["./src/styles/*"],
      "@/types/*": ["./src/types/*"],
      "@/config/*": ["./src/config/*"],
      "@/constants/*": ["./src/constants/*"],
      "@/middleware": ["./src/middleware.ts"],
      "@/store/*": ["./src/store/*"],
      "@/providers/*": ["./src/providers/*"],
      "@/context/*": ["./src/context/*"]
    },
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "assumeChangesOnlyAffectDirectDependencies": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": false,
    "noPropertyAccessFromIndexSignature": false,
    "allowImportingTsExtensions": false,
    "preserveValueImports": true,
    "importsNotUsedAsValues": "remove"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/**/*",
    "app/**/*",
    "pages/**/*",
    "components/**/*",
    "middleware.ts",
    "tailwind.config.ts",
    "next.config.js",
    "next.config.mjs"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "out",
    "dist",
    "build",
    "coverage",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "test/**/*",
    "tests/**/*",
    "__tests__/**/*",
    "e2e/**/*",
    "cypress/**/*",
    "playwright/**/*"
  ]
}