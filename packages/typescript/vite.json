{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable", "WebWorker"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "verbatimModuleSyntax": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": false,
    "noPropertyAccessFromIndexSignature": false,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "@agenda-bella/api": ["../../packages/api/src"],
      "@agenda-bella/api/*": ["../../packages/api/src/*"],
      "@agenda-bella/audit": ["../../packages/audit/src"],
      "@agenda-bella/audit/*": ["../../packages/audit/src/*"],
      "@agenda-bella/database": ["../../packages/database/src"],
      "@agenda-bella/database/*": ["../../packages/database/src/*"],
      "@agenda-bella/security": ["../../packages/security/src"],
      "@agenda-bella/security/*": ["../../packages/security/src/*"],
      "@agenda-bella/shared": ["../../packages/shared/src"],
      "@agenda-bella/shared/*": ["../../packages/shared/src/*"],
      "@agenda-bella/ui": ["../../packages/ui/src"],
      "@agenda-bella/ui/*": ["../../packages/ui/src/*"],
      "@agenda-bella/typescript": ["../../packages/typescript"],
      "@agenda-bella/typescript/*": ["../../packages/typescript/*"],
      "@/*": ["./src/*"],
      "~/*": ["./src/*"],
      "@/components/*": ["./src/components/*"],
      "@/pages/*": ["./src/pages/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/utils/*": ["./src/utils/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/styles/*": ["./src/styles/*"],
      "@/types/*": ["./src/types/*"],
      "@/config/*": ["./src/config/*"],
      "@/constants/*": ["./src/constants/*"],
      "@/store/*": ["./src/store/*"],
      "@/services/*": ["./src/services/*"],
      "@/assets/*": ["./src/assets/*"],
      "@/router/*": ["./src/router/*"],
      "@/context/*": ["./src/context/*"],
      "@/providers/*": ["./src/providers/*"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "preserveConstEnums": true,
    "assumeChangesOnlyAffectDirectDependencies": true,
    "declaration": false,
    "declarationMap": false,
    "sourceMap": true,
    "preserveValueImports": true,
    "importsNotUsedAsValues": "remove"
  },
  "include": [
    "src/**/*",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.jsx",
    "vite.config.ts",
    "vite.config.js",
    "vitest.config.ts",
    "vitest.config.js",
    "tailwind.config.ts",
    "tailwind.config.js",
    "postcss.config.js",
    "**/*.d.ts",
    "index.html"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "test/**/*",
    "tests/**/*",
    "__tests__/**/*",
    "e2e/**/*",
    "cypress/**/*",
    "playwright/**/*"
  ]
}