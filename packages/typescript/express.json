{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "CommonJS",
    "moduleResolution": "node10",
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowImportingTsExtensions": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    "importHelpers": true,
    "downlevelIteration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "exactOptionalPropertyTypes": true,
    "noPropertyAccessFromIndexSignature": true,
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "useUnknownInCatchVariables": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@agenda-bella/api": ["../../packages/api/src"],
      "@agenda-bella/api/*": ["../../packages/api/src/*"],
      "@agenda-bella/audit": ["../../packages/audit/src"],
      "@agenda-bella/audit/*": ["../../packages/audit/src/*"],
      "@agenda-bella/database": ["../../packages/database/src"],
      "@agenda-bella/database/*": ["../../packages/database/src/*"],
      "@agenda-bella/security": ["../../packages/security/src"],
      "@agenda-bella/security/*": ["../../packages/security/src/*"],
      "@agenda-bella/shared": ["../../packages/shared/src"],
      "@agenda-bella/shared/*": ["../../packages/shared/src/*"],
      "@agenda-bella/typescript": ["../../packages/typescript"],
      "@agenda-bella/typescript/*": ["../../packages/typescript/*"],
      "@/*": ["./src/*"],
      "~/*": ["./src/*"],
      "@/controllers/*": ["./src/controllers/*"],
      "@/middleware/*": ["./src/middleware/*"],
      "@/models/*": ["./src/models/*"],
      "@/routes/*": ["./src/routes/*"],
      "@/services/*": ["./src/services/*"],
      "@/utils/*": ["./src/utils/*"],
      "@/types/*": ["./src/types/*"],
      "@/config/*": ["./src/config/*"],
      "@/constants/*": ["./src/constants/*"],
      "@/validators/*": ["./src/validators/*"],
      "@/auth/*": ["./src/auth/*"],
      "@/database/*": ["./src/database/*"],
      "@/jobs/*": ["./src/jobs/*"],
      "@/queues/*": ["./src/queues/*"],
      "@/schemas/*": ["./src/schemas/*"],
      "@/plugins/*": ["./src/plugins/*"]
    },
    "incremental": true,
    "composite": false,
    "tsBuildInfoFile": "./.tsbuildinfo",
    "preserveConstEnums": true,
    "assumeChangesOnlyAffectDirectDependencies": true,
    "types": ["node", "jest"],
    "typeRoots": ["./node_modules/@types", "./src/types", "./types"],
    "importsNotUsedAsValues": "error",
    "preserveValueImports": true,
    "verbatimModuleSyntax": false
  },
  "include": [
    "src/**/*",
    "src/**/*.ts",
    "src/**/*.js",
    "**/*.d.ts",
    "types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "**/*.test.ts",
    "**/*.test.js",
    "**/*.spec.ts",
    "**/*.spec.js",
    "test/**/*",
    "tests/**/*",
    "__tests__/**/*",
    "e2e/**/*",
    "cypress/**/*",
    "playwright/**/*",
    "jest.config.js",
    "jest.config.ts"
  ],
  "ts-node": {
    "esm": false,
    "experimentalSpecifierResolution": "node",
    "transpileOnly": false,
    "compilerOptions": {
      "module": "CommonJS",
      "target": "ES2022"
    }
  }
}