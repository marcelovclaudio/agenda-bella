{
  "name": "@agenda-bella/database",
  "version": "0.1.0",
  "description": "Database layer with Prisma ORM, Redis, and RabbitMQ for Agenda Bella",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist/**",
    "prisma/**"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:seed": "tsx prisma/seed.ts",
    "db:reset": "prisma migrate reset --force",
    "db:studio": "prisma studio",
    "lint": "eslint src/**/*.ts",
    "test": "jest"
  },
  "dependencies": {
    "@prisma/client": "^5.6.0",
    "amqplib": "^0.10.3",
    "ioredis": "^5.3.2"
  },
  "devDependencies": {
    "@agenda-bella/typescript": "workspace:*",
    "@types/amqplib": "^0.10.4",
    "@types/node": "^20.8.9",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "prisma": "^5.6.0",
    "tsup": "^7.2.0",
    "tsx": "^4.1.1",
    "typescript": "^5.2.2"
  }
}