{
  "name": "@agenda-bella/api",
  "version": "0.1.0",
  "description": "Shared API utilities, services, and middleware for Agenda Bella",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint src/**/*.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "types": "tsc --noEmit"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@agenda-bella/typescript": "workspace:*",
    "@types/node": "^24.3.0",
    "eslint": "^9.33.0",
    "jest": "^30.0.5",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2"
  }
}
