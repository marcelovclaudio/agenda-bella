{
  "name": "@agenda-bella/shared",
  "version": "0.1.0",
  "description": "Shared utilities, hooks, and types for Agenda Bella applications",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint src/**/*.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "date-fns": "^2.30.0",
    "date-fns-tz": "^2.0.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@agenda-bella/typescript": "workspace:*",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/node": "^20.8.9",
    "@types/react": "^18.2.37",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "react": "^18.2.0",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "react": ">=18.0.0"
  }
}