{
  "name": "@agenda-bella/security",
  "version": "0.1.0",
  "description": "Security utilities for authentication, authorization, and protection",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint src/**/*.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "audit": "npm audit"
  },
  "dependencies": {
    "@casl/ability": "^6.7.3",
    "bcryptjs": "^3.0.2",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "rate-limiter-flexible": "^7.2.0"
  },
  "devDependencies": {
    "@agenda-bella/typescript": "workspace:*",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.3.0",
    "eslint": "^9.33.0",
    "jest": "^30.0.5",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2"
  }
}
