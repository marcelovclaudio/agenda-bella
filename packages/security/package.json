{
  "name": "@agenda-bella/security",
  "version": "0.1.0",
  "description": "Security utilities for authentication, authorization, and protection",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src/**/*.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "type-check": "tsc --noEmit",
    "audit": "npm audit"
  },
  "dependencies": {
    "@agenda-bella/shared": "workspace:*",
    "@casl/ability": "^6.7.3",
    "bcryptjs": "^3.0.2",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "rate-limiter-flexible": "^7.2.0"
  },
  "devDependencies": {
    "@agenda-bella/typescript": "workspace:*",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.3.0",
    "eslint": "^9.33.0",
    "jest": "^30.0.5",
    "ts-jest": "^29.2.5",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2"
  },
  "peerDependencies": {
    "express": "^4.18.0"
  }
}
