{
  "extends": "../typescript/base.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "paths": {
      "@agenda-bella/shared": ["../shared/src"],
      "@agenda-bella/database": ["../database/src"],
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*", "__tests__/**/*", "tsup.config.ts"],
  "exclude": ["node_modules", "dist", "jest.config.js"],
  "references": [{ "path": "../shared" }, { "path": "../database" }]
}
